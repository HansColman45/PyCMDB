@using CMDB.Domain.DTOs
@model PermissionDTO
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
@if ((bool)ViewData["AddAccess"])
{
    <form class="form-horizontal" action="@ViewData["Controller"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Right" class="control-label">Type <span style="color:red;">*</span></label>
            <input asp-for="Right" class="form-control" />
            <span class="text-danger field-validation-valid" asp-validation-for="Right" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Description <span style="color:red;">*</span></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger field-validation-valid" data-valmsg-replace="true"></span>
        </div>
        <input type="hidden" name="form-submitted" value="1" /><br>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Create</button>
            <a class="btn" asp-area="" asp-controller="Permission" asp-action="Index"><i class="@ViewBag.BackIcon"></i> Back</a>
        </div>
        <div class="form-group">
            <span class="text-muted"><em><span style="color:red;">*</span> Indicates required field</em></span>
        </div>
    </form>
}
else
{
    <p>You do not access to this page</p>
}