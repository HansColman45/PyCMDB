@using CMDB.Domain.DTOs
@model PermissionDTO
@{
    Layout = "_Layout";
}
@if ((bool)ViewData["DeleteAccess"])
{
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Right)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
            </tr>
        </thead>
        <tbody>
           <tr>
                <td id="Level">@Html.DisplayFor(model => model.Right)</td>
                <td id="Menu">@Html.DisplayFor(model => model.Description)</td>
            </tr>
        </tbody>
    </table>
    <form class="form-horizontal" action="@ViewData["Controller"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        Are you sure you want to delete this Permission?<br />
        Please know that this action cannot be undone.<br />
        <input type="hidden" name="form-submitted" value="1" /><br>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Delete</button>
            <a class="btn" asp-area="" asp-controller="@ViewData["backUrl"]" asp-action="Index"><i class="@ViewBag.BackIcon"></i> Back</a>
        </div>
    </form>
}
else
{
    <p>You do not access to this page</p>
}